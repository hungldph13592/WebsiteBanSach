    @model IEnumerable<WebBanSach.ModelGhep.Thongke>
    @{
        
    }

<h6>Tên Khách Hàng :  @Model.Where(c=>c.hoaDon.TrangThai==1).Select(c=>c.khachHang.HoVaTen).FirstOrDefault() </h6>
<h6>Ngày mua :  @Model.Where(c=>c.hoaDon.TrangThai==1).Select(c=>c.hoaDon.NgayMua).FirstOrDefault()</h6>
<table class="table">
                <thead>
                    <tr>
                        <th>
                           Tên Truyện
                        </th>
                        <th>
                           Nhà Xuất bản
                        </th>
                          <th>
                          Số lượng
                        </th>
                        <th>
                           Thành tiền
                        </th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(c=>c.hoaDon.TrangThai==1))
                    {
                        <tr>
                            <td>

                                @Html.DisplayFor(modelItem => item.sach.TenSach)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sach.NhaXuatBan.TenXuatBan)
                            </td>
                            <td>
                              @String.Format("{0:#,##0.##}",    @item.hoaDonCT.SoLuong ) 
                            </td>
                            <td>
                              @String.Format("{0:#,##0.##}", (item.hoaDonCT.SoLuong  * item.sach.Gia ) ) đ
                            </td>
                             
                       
                         


                        </tr>
                    }
                </tbody>
            </table>
